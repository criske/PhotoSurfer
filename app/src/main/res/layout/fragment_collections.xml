<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.collection.CollectionsFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarCollections"
        style="@style/BasicAppToolbar.Common.Nav"
        app:title="@string/collections" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerCollections"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_list_collections" />

</LinearLayout>