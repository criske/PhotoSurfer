<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar"/>

    <style name="AppTheme" parent="BaseAppTheme" >
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BasicAppToolbar" />

    <style name="BasicAppToolbar.Common">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:theme">@style/Base.ThemeOverlay.AppCompat.Light.TintedIcon</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="titleTextColor">@color/colorDarkGrey800</item>
        <item name="layout_collapseMode">pin</item>
    </style>

    <style name="Base.ThemeOverlay.AppCompat.Light.TintedIcon">
        <item name="colorControlNormal">@android:color/darker_gray</item>
    </style>

    <style name="BasicAppToolbar.Common.Nav">
        <item name="navigationIcon">@drawable/ic_arrow_back_white_24dp</item>
    </style>

    <style name="BasicAppBarLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>


</resources>
